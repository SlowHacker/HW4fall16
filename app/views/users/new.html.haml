%h1 Create New User

= form_tag users_path do

  = label :user, :user_id, 'User-ID', :for => "signup_user"
  = text_field :user, :user_id, :id => "signup_user"

  = label :user, :email, 'E-mail', :for => "signup_email"
  = text_field :user, :email, :id => "signup_email"

  = submit_tag 'Create my account', :id => "signup_create"
